.wxj_Navhover_contain
  width 360px
  height 300px
  border 1px solid #f7f7f7
  box-shadow 1px 2px 10px 1px #f7f7f7
  background white
  margin-top 10px
  position absolute
  left -50px
  top 50px
  display none
  z-index 2000

.wxj_Navhover_p
  width 150px
  height 30px
  margin-right 5px
  margin-left 20px
  padding-top 16px
  text-decoration none
  float left

.wxj_Navhover_contain_p
  color #222
  text-transform none!important
  font-weight 400!important

.wxj_Navhover_p:hover
  color red