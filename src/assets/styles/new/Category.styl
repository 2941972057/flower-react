// 内容区分类样式
#new-category-guide
  width 1456px
  height 72px
  padding 12px 20px
  border-radius 2px
  background-color #FAFAFA
  margin 20px auto 0
  overflow hidden

#new-category-guide .unit
  float left
  width 263px
  margin-right 23px
  padding-right 10px
  border-right 1px solid #EDEDED
  overflow hidden

#new-category-guide .last
  border none
  margin 0
  padding 0

#new-category-guide .unit .guide_list
  margin-right 24px
  line-height 24px
  height 24px
  display block
  float left

#new-category-guide .unit .guide_list:hover
  text-decoration underline
  color #9A0000

// 内容区风格样式
#new-category-img
  width 1496px
  height 126px
  margin 20px auto

.category-image
  width 236px
  height 126px
  margin-right 16px

#new-category-img .category-image:last-child
  margin 0

.category-image>img
  border-radius 4px