*
  padding 0
  margin 0
body
  background-color rgb(231,231,231)
  font-size 14px
  color #444
a
  color #222
  text-decoration none
  outline 0
// 头部导航栏样式
#header-nav
  width 100%
  height 48px
  background-color white

#nav
  width 1496px
  margin auto

ul,li
  list-style none

#nav::after
  content ''
  display block
  clear both
#nav-left
  float left
  height 48px
  width 415px

#nav-left>a
  height 48px
  position relative
  margin-right 20px

#nav-left>a:first-child
  top 10px

#nav-left>a:hover
  color #c90000

#nav-right
  float right
  position relative
  top 8px

.nav-list>i
  position relative
  top 2px
  margin-left 2px
#register,#login
  width 50px
  height 32px
  line-height 32px
  margin-right 10px


// 头部广告样式
#header-advertising
  width 100%
  height 60px
  position relative

#header-ad
  width 100%
  display block
  height 60px
  background url("../../images/header/headerLogo.png") center

#header-ad-delete
  position absolute
  right 0
  top 0
  color rgba(255,255,255,.8)
  padding 5px 10px
  background-color rgba(2,3,3,.5)
#header-ad-delete:hover
  color rgba(255,255,255,1)

// 头部大图片和各种登录按钮
#header-logoImg
  width 1496px
  height 98px
  margin auto
  border 1px solid green
