// 头部导航栏样式
#header-nav
  width 100%
  height 48px
  background-color white
  position fixed
  top 0
  z-index 10

#nav
  width 1496px
  margin auto
  font-size 14px

#header-nav ul,#header-nav li
  list-style none

#nav::after
  content ''
  display block
  clear both

#nav-left
  float left
  height 48px
  width 435px

#nav-left>a
  height 48px
  position relative
  text-decoration none
  margin-right 25px
  color #444
  outline none

#nav-left>a:first-child
  top 10px
  display inline-block
  height 28px

#nav-left>a:hover
  color #c90000

#nav-right
  float right
  position relative
  top 8px

.nav-list>i
  position relative
  top 2px
  margin-left 2px
#register,#login
  width 50px
  height 32px
  line-height 32px
  margin-right 10px
#register
  background linear-gradient(#E53E49, #D43636)
  outline none
  color white
  width 52px
  height 34px
  line-height 34px
  border 1px solid #C90000
#login
  border 1px solid #D9D9D9
  background linear-gradient(#FAFAFA, #F2F2F2)
  color black
  width 52px
  height 34px
  line-height 34px
  outline none
#register:hover
  background linear-gradient( #F45D68, #E54646)
#login:hover
  background linear-gradient(#FFF, #F7F7F7)

@media screen and (max-width: 1288px)
  #nav
    width 992px
@media screen and (max-width: 1542px) and (min-width: 1289px)
  #nav
    width 1244px
